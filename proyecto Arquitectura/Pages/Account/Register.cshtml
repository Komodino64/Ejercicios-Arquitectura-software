                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="form-input" placeholder="tu@email.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.Password">Contrase√±a</label>
                    <input asp-for="Input.Password" class="form-input" type="password" placeholder="M√≠nimo 4 caracteres" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Confirmar Contrase√±a</label>
                    <input asp-for="Input.ConfirmPassword" class="form-input" type="password" placeholder="Repite la contrase√±a" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn-submit">‚úÖ Registrarse</button>
                    <a href="/" class="btn-cancel">Cancelar</a>
                </div>
                
                <div class="form-footer">
                    <p>¬øYa tienes cuenta? <a href="/Account/Login">Inicia sesi√≥n aqu√≠</a></p>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2026 Imperial Luxury Cars. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
