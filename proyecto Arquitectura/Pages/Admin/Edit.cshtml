@{
    ViewData["Title"] = "Editar Veh√≠culo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Imperial Luxury Cars</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/admin.css">
</head>
<body>
    <header>
        <div class="container">
            <h1>üèÜ IMPERIAL LUXURY CARS - ADMIN</h1>
            <p class="tagline">Editar Veh√≠culo</p>
        </div>
    </header>

    <nav>
        <div class="container">
            <a href="/">Inicio</a>
            <a href="/Admin">Dashboard</a>
            <a href="/Admin/Create">Agregar Veh√≠culo</a>
            <a href="/Admin/Messages">Mensajes</a>
        </div>
    </nav>

    <main class="container">
        <div class="form-container">
            <h2>Editar Veh√≠culo</h2>
            
            <form method="post" class="admin-form">
                <input type="hidden" asp-for="Car.Id" />
                
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Car.Brand">Marca</label>
                        <input asp-for="Car.Brand" class="form-input" />
                        <span asp-validation-for="Car.Brand" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Car.Model">Modelo</label>
                        <input asp-for="Car.Model" class="form-input" />
                        <span asp-validation-for="Car.Model" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Car.Year">A√±o</label>
                        <input asp-for="Car.Year" class="form-input" type="number" />
                        <span asp-validation-for="Car.Year" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Car.Price">Precio (USD)</label>
                        <input asp-for="Car.Price" class="form-input" type="number" step="0.01" />
                        <span asp-validation-for="Car.Price" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Car.Mileage">Kilometraje</label>
                        <input asp-for="Car.Mileage" class="form-input" type="number" />
                        <span asp-validation-for="Car.Mileage" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Car.Color">Color</label>
                        <input asp-for="Car.Color" class="form-input" />
                        <span asp-validation-for="Car.Color" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="Car.FuelType">Tipo de Combustible</label>
                        <select asp-for="Car.FuelType" class="form-input">
                            <option value="Gasolina">Gasolina</option>
                            <option value="Di√©sel">Di√©sel</option>
                            <option value="H√≠brido">H√≠brido</option>
                            <option value="El√©ctrico">El√©ctrico</option>
                        </select>
                        <span asp-validation-for="Car.FuelType" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Car.Transmission">Transmisi√≥n</label>
                        <select asp-for="Car.Transmission" class="form-input">
                            <option value="Manual">Manual</option>
                            <option value="Autom√°tica">Autom√°tica</option>
                        </select>
                        <span asp-validation-for="Car.Transmission" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group">
                    <label asp-for="Car.ImageUrl">URL de Imagen</label>
                    <input asp-for="Car.ImageUrl" class="form-input" />
                    <span asp-validation-for="Car.ImageUrl" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Car.Description">Descripci√≥n</label>
                    <textarea asp-for="Car.Description" class="form-textarea" rows="4"></textarea>
                    <span asp-validation-for="Car.Description" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Car.Status">Estado</label>
                    <select asp-for="Car.Status" class="form-input">
                        <option value="Disponible">Disponible</option>
                        <option value="Vendido">Vendido</option>
                        <option value="Reservado">Reservado</option>
                    </select>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn-submit">üíæ Guardar Cambios</button>
                    <a href="/Admin" class="btn-cancel">Cancelar</a>
                </div>
            </form>
        </div>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2026 Imperial Luxury Cars. Todos los derechos reservados.</p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
