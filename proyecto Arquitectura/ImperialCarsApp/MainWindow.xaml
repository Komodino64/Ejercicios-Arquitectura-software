<Window x:Class="ImperialCarsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Imperial Luxury Cars" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
        <!-- Icon="icon.ico" -->
    
    <Grid>
        <!-- Barra de estado superior -->
        <DockPanel>
            <Border DockPanel.Dock="Top" Background="#1a1a1a" Height="30">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0">
                        <TextBlock Text="ðŸš— Imperial Luxury Cars" 
                                   Foreground="#FFD700" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Bold"
                                   FontSize="14"/>
                        <TextBlock x:Name="StatusText" 
                                   Text=" - Conectando..." 
                                   Foreground="White" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
                        <Button x:Name="RefreshButton" 
                                Content="ðŸ”„ Recargar" 
                                Background="#333" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Padding="10,5" 
                                Margin="5,0"
                                Click="RefreshButton_Click"
                                Cursor="Hand"/>
                        <Button x:Name="DevToolsButton" 
                                Content="ðŸ”§ DevTools" 
                                Background="#333" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Padding="10,5" 
                                Margin="5,0"
                                Click="DevToolsButton_Click"
                                Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- WebView2 para mostrar la pÃ¡gina -->
            <wv2:WebView2 x:Name="WebView" 
                          Source="http://localhost:9999/index.html"
                          />
        </DockPanel>
    </Grid>
</Window>
